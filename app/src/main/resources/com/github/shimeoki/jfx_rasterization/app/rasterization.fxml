<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>

<AnchorPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="com.github.shimeoki.jfx_rasterization.app.RasterizationController">
    <VBox>
        <HBox>
            <fx:define>
                <ToggleGroup fx:id="modeTg"/>
            </fx:define>
            <children>
                <RadioButton text="manual" toggleGroup="$modeTg"/>
                <RadioButton text="dynamic" toggleGroup="$modeTg"/>
                <RadioButton text="interactive" toggleGroup="$modeTg"/>
            </children>
        </HBox>
    </VBox>
</AnchorPane>
